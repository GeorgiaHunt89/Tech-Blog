<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="container">
    <div class="flex justify-center">
        <div class="w-full md:w-1/2">
            <h2>Your Account: <span class="member-username">{{user.username}}</span></h2>
            <p>Your details:</p>
            <ul>
                <li>ID: {{user.id}}</li>
                <li>Username: {{user.username}}</li>
                <li>Email: {{user.email}}</li>
                <li>Account Creation: {{user.date_created}}</li>
            </ul>
        </div>


{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <ul>
      <article class="post">
    <div class="title">
       <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="meta">
        <strong>Posted by {{user.username}} on {{format_date created_at}}</strong>
    </div>
    </article>
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </ul>
    {{/each}}
  </ol>
</section>
{{/if}}

<div>
    <button type="submit"><a href="/dashboard/newPost" class="create-btn">Create New Post</a></button>
</div>

<script src="./js/user.js"></script>